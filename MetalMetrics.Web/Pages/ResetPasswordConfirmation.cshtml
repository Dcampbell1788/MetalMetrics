@page
@model MetalMetrics.Web.Pages.ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Password Reset";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5 text-center">
        <div class="card shadow-sm">
            <div class="card-body p-5">
                <div class="display-1 text-success mb-3">&#10003;</div>
                <h2>Password Reset Successfully</h2>
                <p class="text-muted mt-3">Your password has been reset. You can now sign in with your new password.</p>
                <a asp-page="/Login" class="btn btn-warning btn-lg mt-3">Sign In</a>
            </div>
        </div>
    </div>
</div>
