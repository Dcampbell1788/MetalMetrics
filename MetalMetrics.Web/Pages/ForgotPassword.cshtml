@page
@model MetalMetrics.Web.Pages.ForgotPasswordModel
@{
    Layout = "_MarketingLayout";
    ViewData["Title"] = "Forgot Password";
}

<section class="mm-auth-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card shadow">
                    <div class="card-body p-4">
                        <h2 class="card-title text-center mb-4">
                            <span class="text-warning">Metal</span><span>Metrics</span>
                        </h2>

                        @if (Model.EmailSent)
                        {
                            <div class="text-center">
                                <p class="text-success fw-bold">If that email exists, we sent a password reset link.</p>
                                <p class="text-muted">Check your inbox (and spam folder) for the reset email.</p>
                                <a asp-page="/Login" class="btn btn-warning mt-2">Back to Sign In</a>
                            </div>
                        }
                        else
                        {
                            <p class="text-center text-muted mb-4">Enter your email to receive a password reset link.</p>

                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                                <div class="mb-3">
                                    <label asp-for="Input.Email" class="form-label"></label>
                                    <input asp-for="Input.Email" class="form-control" autofocus />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>

                                <div class="d-grid">
                                    <button type="submit" class="btn btn-warning btn-lg">Send Reset Link</button>
                                </div>

                                <p class="text-center mt-3">
                                    <a asp-page="/Login">Back to Sign In</a>
                                </p>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
