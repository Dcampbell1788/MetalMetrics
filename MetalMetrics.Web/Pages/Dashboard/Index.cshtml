@page
@model MetalMetrics.Web.Pages.Dashboard.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-end mb-3">
    <a asp-page="/Reports/Index" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-bar-chart-line me-1"></i> Full Reports
    </a>
</div>

<!-- At-Risk Alert Banner -->
@if (Model.AtRiskJobs.Count > 0)
{
    <div class="mb-4" id="atRiskAlerts">
        @foreach (var risk in Model.AtRiskJobs)
        {
            <div class="alert alert-danger d-flex align-items-center py-2 mb-2">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong class="me-2">At Risk:</strong>
                <span>@risk.JobNumber — @risk.CustomerName is @risk.OveragePercent.ToString("F0")% over budget</span>
                <a href="/Jobs/Actuals/Enter/@risk.Slug" class="btn btn-sm btn-outline-danger ms-auto">Review Actuals</a>
            </div>
        }
    </div>
}

<!-- KPI Cards — 5 cards -->
@{
    var pipelineValue = Model.Kpis.InProgressEstimatedValue + Model.Kpis.QuotedEstimatedValue;
}
<div class="row row-cols-1 row-cols-md-3 row-cols-lg-5 g-3 mb-4">
    <div class="col">
        <a href="/Jobs?statusFilter=InProgress" class="text-decoration-none">
            <div class="card shadow-sm border-start border-4 border-primary h-100">
                <div class="card-body">
                    <div class="text-muted small"><i class="bi bi-briefcase me-1"></i>Active Jobs</div>
                    <h3 class="mb-0 text-body">@Model.Kpis.InProgressCount</h3>
                    <small class="text-muted">in progress</small>
                </div>
            </div>
        </a>
    </div>
    <div class="col">
        <div class="card shadow-sm border-start border-4 @(Model.Kpis.AverageMarginPercent >= Model.Kpis.TargetMarginPercent ? "border-success" : "border-warning") h-100">
            <div class="card-body">
                <div class="text-muted small"><i class="bi bi-percent me-1"></i>Avg Margin</div>
                <h3 class="mb-0 @(Model.Kpis.AverageMarginPercent >= 0 ? "text-profit" : "text-loss")">@Model.Kpis.AverageMarginPercent.ToString("F1")%</h3>
                <small class="text-muted">Target: @Model.Kpis.TargetMarginPercent.ToString("F0")%</small>
            </div>
        </div>
    </div>
    <div class="col">
        <a href="#atRiskAlerts" class="text-decoration-none">
            <div class="card shadow-sm border-start border-4 @(Model.AtRiskJobs.Count > 0 ? "border-danger" : "border-success") h-100">
                <div class="card-body">
                    <div class="text-muted small"><i class="bi bi-exclamation-triangle me-1"></i>Jobs at Risk</div>
                    <h3 class="mb-0 text-body">@Model.AtRiskJobs.Count</h3>
                    <small class="text-muted">over budget by 10%+</small>
                </div>
            </div>
        </a>
    </div>
    <div class="col">
        <div class="card shadow-sm border-start border-4 @(Model.Kpis.ProfitThisMonth >= 0 ? "border-success" : "border-danger") h-100">
            <div class="card-body">
                <div class="text-muted small"><i class="bi bi-cash-stack me-1"></i>Profit This Month</div>
                <h3 class="mb-0 @(Model.Kpis.ProfitThisMonth >= 0 ? "text-profit" : "text-loss")">@((Model.Kpis.ProfitThisMonth >= 0 ? "+" : "") + Model.Kpis.ProfitThisMonth.ToString("C0"))</h3>
                <small class="text-muted">completed jobs</small>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card shadow-sm border-start border-4 border-info h-100">
            <div class="card-body">
                <div class="text-muted small"><i class="bi bi-funnel me-1"></i>Pipeline Value</div>
                <h3 class="mb-0">@pipelineValue.ToString("C0")</h3>
                <small class="text-muted">quoted + in progress</small>
            </div>
        </div>
    </div>
</div>

<!-- Work Pipeline Section -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-kanban me-1"></i>Work Pipeline</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-3">
                        <a href="/Jobs?statusFilter=Quoted" class="text-decoration-none">
                            <div class="text-muted small">Quoted</div>
                            <h3 class="mb-0 text-body">@Model.Kpis.QuotedCount</h3>
                            <small class="text-muted">awaiting approval</small>
                        </a>
                    </div>
                    <div class="col-md-3">
                        <div class="text-muted small">Quoted Value</div>
                        <h3 class="mb-0">@Model.Kpis.QuotedEstimatedValue.ToString("C0")</h3>
                        <small class="text-muted">estimated revenue</small>
                    </div>
                    <div class="col-md-3">
                        <a href="/Jobs?statusFilter=InProgress" class="text-decoration-none">
                            <div class="text-muted small">In Progress</div>
                            <h3 class="mb-0 text-body">@Model.Kpis.InProgressCount</h3>
                            <small class="text-muted">active jobs</small>
                        </a>
                    </div>
                    <div class="col-md-3">
                        <div class="text-muted small">In-Progress Value</div>
                        <h3 class="mb-0">@Model.Kpis.InProgressEstimatedValue.ToString("C0")</h3>
                        <small class="text-muted">estimated revenue</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.JobSummaries.Count == 0)
{
    <div class="text-center text-muted py-5">
        <p class="lead">No completed jobs with actuals yet.</p>
        <p>Complete jobs and enter actuals to see profitability data here.</p>
    </div>
}
else
{
    <!-- Estimated vs Actual Cost — full width -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-bar-chart me-1"></i>Estimated vs Actual Cost by Job</h5>
                </div>
                <div class="card-body">
                    <canvas id="profitChart" height="150"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Margin Trend — full width -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-graph-up me-1"></i>Margin Trend Over Time</h5>
                </div>
                <div class="card-body">
                    <canvas id="marginTrend" height="80"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Estimating Accuracy + Customer Profitability — 50% each -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-bullseye me-1"></i>Estimating Accuracy</h5>
                </div>
                @{
                    var worstCategory = Model.CategoryVariances.Count > 0
                        ? Model.CategoryVariances.OrderByDescending(c => Math.Abs(c.AverageVariancePercent)).First()
                        : null;
                }
                @if (Model.CategoryVariances.Count > 0)
                {
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-sm mb-0">
                                <thead>
                                    <tr>
                                        <th class="ps-3">Category</th>
                                        <th class="text-end">Avg Variance</th>
                                        <th class="text-end">Avg $ Impact</th>
                                        <th class="text-center pe-3">Direction</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cv in Model.CategoryVariances)
                                    {
                                        var varClass = cv.AverageVariancePercent > 5 ? "text-loss" : (cv.AverageVariancePercent < -5 ? "text-profit" : "");
                                        <tr>
                                            <td class="ps-3">@cv.Category</td>
                                            <td class="text-end @varClass">@((cv.AverageVariancePercent >= 0 ? "+" : "") + cv.AverageVariancePercent.ToString("F1"))%</td>
                                            <td class="text-end @varClass">@((cv.AverageDollarVariance >= 0 ? "+" : "") + cv.AverageDollarVariance.ToString("C0"))</td>
                                            <td class="text-center pe-3">
                                                @if (cv.Direction == "Underestimate")
                                                {
                                                    <span class="text-loss" title="Underestimate (risk)">&#9650;</span>
                                                }
                                                else
                                                {
                                                    <span class="text-profit" title="Overestimate (safe)">&#9660;</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    if (worstCategory != null && Math.Abs(worstCategory.AverageVariancePercent) > 10)
                    {
                        <div class="card-footer">
                            <div class="alert alert-info py-2 mb-0 small">
                                You tend to @worstCategory.Direction.ToLower() <strong>@worstCategory.Category</strong> by ~@Math.Abs(worstCategory.AverageVariancePercent).ToString("F0")%.
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="card-body">
                        <p class="text-muted mb-0">Not enough data yet.</p>
                    </div>
                }
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light d-flex align-items-center justify-content-between">
                    <h5 class="mb-0"><i class="bi bi-people me-1"></i>Customer Profitability</h5>
                    @if (Model.CustomerProfitability.Count > 0)
                    {
                        <div class="btn-group btn-group-sm">
                            <button type="button" class="btn btn-outline-secondary active" onclick="sortCustomerTable('margin')" id="btnSortMargin">Margin %</button>
                            <button type="button" class="btn btn-outline-secondary" onclick="sortCustomerTable('pl')" id="btnSortPL">P/L</button>
                        </div>
                    }
                </div>
                <div class="card-body p-0">
                    @if (Model.CustomerProfitability.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover mb-0" id="customerTable">
                                <thead class="table-light">
                                    <tr>
                                        <th>Customer</th>
                                        <th class="text-center">Jobs</th>
                                        <th class="text-end">Revenue</th>
                                        <th class="text-end">P/L</th>
                                        <th class="text-end">Margin</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var c in Model.CustomerProfitability)
                                    {
                                        var rowClass = c.MarginPercent < Model.Kpis.TargetMarginPercent
                                            ? (c.MarginPercent < Model.Kpis.TargetMarginPercent - 3 ? "table-danger" : "table-warning")
                                            : "";
                                        <tr class="@rowClass" data-margin="@c.MarginPercent" data-pl="@c.ProfitLoss">
                                            <td>@c.CustomerName</td>
                                            <td class="text-center">@c.JobCount</td>
                                            <td class="text-end">@c.TotalRevenue.ToString("C0")</td>
                                            <td class="text-end @(c.ProfitLoss >= 0 ? "text-profit" : "text-loss")">
                                                @((c.ProfitLoss >= 0 ? "+" : "") + c.ProfitLoss.ToString("C0"))
                                            </td>
                                            <td class="text-end @(c.MarginPercent >= 0 ? "text-profit" : "text-loss")">
                                                @c.MarginPercent.ToString("F1")%
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted p-3 mb-0">No customer data yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @if (Model.JobSummaries.Count > 0)
    {
        <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-annotation@3.0.1/dist/chartjs-plugin-annotation.min.js"></script>
        <script>
            var jobs = @Html.Raw(Model.JobSummariesJson);
            var targetMargin = @Model.Kpis.TargetMarginPercent;

            // Estimated vs Actual Cost (sorted chronologically)
            var chronoJobs = jobs.slice().sort(function(a, b) {
                return new Date(a.CompletedAt) - new Date(b.CompletedAt);
            });
            var profitCtx = document.getElementById('profitChart').getContext('2d');
            new Chart(profitCtx, {
                type: 'bar',
                data: {
                    labels: chronoJobs.map(function(j) { return j.JobNumber; }),
                    datasets: [
                        {
                            label: 'Estimated',
                            data: chronoJobs.map(function(j) { return j.TotalEstimatedCost; }),
                            backgroundColor: 'rgba(54, 162, 235, 0.7)'
                        },
                        {
                            label: 'Actual',
                            data: chronoJobs.map(function(j) { return j.TotalActualCost; }),
                            backgroundColor: chronoJobs.map(function(j) {
                                if (j.TotalEstimatedCost <= 0) return 'rgba(40, 167, 69, 0.7)';
                                var overPct = (j.TotalActualCost - j.TotalEstimatedCost) / j.TotalEstimatedCost * 100;
                                if (overPct <= 0) return 'rgba(40, 167, 69, 0.7)';
                                if (overPct <= 10) return 'rgba(255, 193, 7, 0.7)';
                                return 'rgba(220, 53, 69, 0.7)';
                            })
                        }
                    ]
                },
                options: {
                    responsive: true,
                    plugins: {
                        tooltip: {
                            callbacks: {
                                afterLabel: function(ctx) {
                                    var job = chronoJobs[ctx.dataIndex];
                                    var diff = job.TotalActualCost - job.TotalEstimatedCost;
                                    var sign = diff >= 0 ? '+' : '-';
                                    var label = sign + '$' + Math.abs(diff).toLocaleString(undefined, {maximumFractionDigits: 0});
                                    label += diff >= 0 ? ' over' : ' under';
                                    return job.CustomerName + ' | ' + label;
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: { callback: function(v) { return '$' + v.toLocaleString(); } }
                        }
                    }
                }
            });

            // Margin Trend with target line
            var sortedJobs = jobs.slice().sort(function(a, b) {
                return new Date(a.CompletedAt) - new Date(b.CompletedAt);
            });
            var marginCtx = document.getElementById('marginTrend').getContext('2d');
            new Chart(marginCtx, {
                type: 'line',
                data: {
                    labels: sortedJobs.map(function(j) {
                        return new Date(j.CompletedAt).toLocaleDateString();
                    }),
                    datasets: [{
                        label: 'Actual Margin %',
                        data: sortedJobs.map(function(j) { return j.ActualMarginPercent; }),
                        borderColor: 'rgba(54, 162, 235, 1)',
                        backgroundColor: 'rgba(54, 162, 235, 0.1)',
                        fill: false,
                        tension: 0.3,
                        pointBackgroundColor: sortedJobs.map(function(j) {
                            return j.ActualMarginPercent >= targetMargin ? 'rgba(40, 167, 69, 1)' : 'rgba(220, 53, 69, 1)';
                        }),
                        pointRadius: 6
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        tooltip: {
                            callbacks: {
                                title: function(ctx) {
                                    var job = sortedJobs[ctx[0].dataIndex];
                                    return job.JobNumber + ' \u2014 ' + job.CustomerName;
                                },
                                label: function(ctx) {
                                    return 'Margin: ' + ctx.raw.toFixed(1) + '%';
                                }
                            }
                        },
                        annotation: {
                            annotations: {
                                targetLine: {
                                    type: 'line',
                                    yMin: targetMargin,
                                    yMax: targetMargin,
                                    borderColor: '#ffc107',
                                    borderWidth: 2,
                                    borderDash: [6, 4],
                                    label: {
                                        display: true,
                                        content: 'Target ' + targetMargin + '%',
                                        position: 'end',
                                        backgroundColor: 'rgba(255, 193, 7, 0.85)',
                                        color: '#000',
                                        font: { size: 11, weight: 'bold' }
                                    }
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            ticks: { callback: function(v) { return v + '%'; } }
                        }
                    }
                }
            });

            // Customer table sort
            function sortCustomerTable(mode) {
                var table = document.getElementById('customerTable');
                var tbody = table.querySelector('tbody');
                var rows = Array.from(tbody.querySelectorAll('tr'));

                rows.sort(function(a, b) {
                    if (mode === 'margin') {
                        return parseFloat(b.dataset.margin) - parseFloat(a.dataset.margin);
                    } else {
                        return parseFloat(b.dataset.pl) - parseFloat(a.dataset.pl);
                    }
                });

                rows.forEach(function(row) { tbody.appendChild(row); });

                document.getElementById('btnSortMargin').classList.toggle('active', mode === 'margin');
                document.getElementById('btnSortPL').classList.toggle('active', mode === 'pl');
            }
        </script>
    }
}
