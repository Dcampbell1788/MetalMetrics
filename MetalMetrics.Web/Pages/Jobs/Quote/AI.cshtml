@page "{slug}"
@model MetalMetrics.Web.Pages.Jobs.Quote.AIModel
@{
    ViewData["Title"] = $"AI Quote â€” {Model.JobNumber}";
}

<p class="text-muted">Customer: @Model.CustomerName</p>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0">Describe the Fabrication Work</h5>
            </div>
            <div class="card-body">
                <form method="post" asp-route-slug="@Model.JobSlug" id="aiQuoteForm">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Input.MaterialType" class="form-label"></label>
                            <select asp-for="Input.MaterialType" class="form-select">
                                <option value="">Select material...</option>
                                @foreach (var mat in AIModel.MaterialTypes)
                                {
                                    <option value="@mat">@mat</option>
                                }
                            </select>
                            <span asp-validation-for="Input.MaterialType" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.MaterialThickness" class="form-label"></label>
                            <input asp-for="Input.MaterialThickness" class="form-control" placeholder="e.g. 16ga or 0.060&quot;" />
                            <span asp-validation-for="Input.MaterialThickness" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Input.PartDimensions" class="form-label"></label>
                            <input asp-for="Input.PartDimensions" class="form-control" placeholder="e.g. 24 x 48" />
                            <span asp-validation-for="Input.PartDimensions" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Input.SheetSize" class="form-label"></label>
                            <input asp-for="Input.SheetSize" class="form-control" placeholder="e.g. 48 x 96" />
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Input.Quantity" class="form-label"></label>
                            <input asp-for="Input.Quantity" class="form-control" type="number" min="1" />
                            <span asp-validation-for="Input.Quantity" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Operations</label>
                        <div class="row">
                            @foreach (var op in AIModel.OperationOptions)
                            {
                                <div class="col-md-3 mb-2">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="Input.Operations" value="@op" id="op-@op.Replace("/", "").Replace(" ", "")" />
                                        <label class="form-check-label" for="op-@op.Replace("/", "").Replace(" ", "")">@op</label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Complexity</label>
                        <div>
                            @foreach (var c in AIModel.ComplexityOptions)
                            {
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="Input.Complexity" value="@c" id="complexity-@c" />
                                    <label class="form-check-label" for="complexity-@c">@c</label>
                                </div>
                            }
                        </div>
                        <span asp-validation-for="Input.Complexity" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.SpecialNotes" class="form-label"></label>
                        <textarea asp-for="Input.SpecialNotes" class="form-control" rows="3" placeholder="Tolerances, finish requirements, etc."></textarea>
                    </div>

                    <button type="submit" class="btn btn-warning" id="submitBtn">
                        <span id="submitText">Generate AI Quote</span>
                        <span id="submitSpinner" class="spinner-border spinner-border-sm d-none" role="status"></span>
                    </button>
                    <a asp-page="/Jobs/Quote/Create" asp-route-slug="@Model.JobSlug" class="btn btn-outline-secondary ms-2">Quote Manually</a>
                    <a asp-page="/Jobs/Details" asp-route-slug="@Model.JobSlug" class="btn btn-outline-secondary ms-2">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('aiQuoteForm').addEventListener('submit', function () {
            var btn = document.getElementById('submitBtn');
            btn.disabled = true;
            document.getElementById('submitText').textContent = 'Generating...';
            document.getElementById('submitSpinner').classList.remove('d-none');
        });
    </script>
}
