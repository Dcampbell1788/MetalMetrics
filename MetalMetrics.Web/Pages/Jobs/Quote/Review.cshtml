@page "{jobId:guid}"
@model MetalMetrics.Web.Pages.Jobs.Quote.ReviewModel
@{
    ViewData["Title"] = "Review AI Quote";
}

<h2>Review AI Quote</h2>
<p class="text-muted">Review and adjust the AI-generated estimate before saving.</p>

<div class="row">
    <div class="col-md-5">
        <div class="card shadow-sm mb-3">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">AI Suggestions</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-7">Labor Hours</dt>
                    <dd class="col-sm-5 text-end">@Model.AISuggestion.EstimatedLaborHours hrs</dd>

                    <dt class="col-sm-7">Material Cost</dt>
                    <dd class="col-sm-5 text-end">@Model.AISuggestion.EstimatedMaterialCost.ToString("C")</dd>

                    <dt class="col-sm-7">Machine Hours</dt>
                    <dd class="col-sm-5 text-end">@Model.AISuggestion.EstimatedMachineHours hrs</dd>

                    <dt class="col-sm-7">Overhead</dt>
                    <dd class="col-sm-5 text-end">@Model.AISuggestion.OverheadPercent%</dd>

                    <dt class="col-sm-7">Suggested Price</dt>
                    <dd class="col-sm-5 text-end fw-bold">@Model.AISuggestion.SuggestedQuotePrice.ToString("C")</dd>

                    <dt class="col-sm-7">Confidence</dt>
                    <dd class="col-sm-5 text-end">
                        @{
                            var confClass = Model.AISuggestion.ConfidenceLevel switch
                            {
                                "High" => "bg-success",
                                "Medium" => "bg-warning text-dark",
                                _ => "bg-danger"
                            };
                        }
                        <span class="badge @confClass">@Model.AISuggestion.ConfidenceLevel</span>
                    </dd>
                </dl>
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.AISuggestion.Reasoning))
        {
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Reasoning</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0">@Model.AISuggestion.Reasoning</p>
                </div>
            </div>
        }

        @if (Model.AISuggestion.Assumptions.Count > 0)
        {
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Assumptions</h5>
                </div>
                <div class="card-body">
                    <ul class="mb-0">
                        @foreach (var assumption in Model.AISuggestion.Assumptions)
                        {
                            <li>@assumption</li>
                        }
                    </ul>
                </div>
            </div>
        }
    </div>

    <div class="col-md-7">
        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0">Your Estimate (Editable)</h5>
            </div>
            <div class="card-body">
                <form method="post" asp-route-jobId="@Model.JobId">
                    <input type="hidden" asp-for="PromptSnapshot" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Input.EstimatedLaborHours" class="form-label"></label>
                            <input asp-for="Input.EstimatedLaborHours" class="form-control calc-field" step="0.01" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.LaborRate" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Input.LaborRate" class="form-control calc-field" step="0.01" />
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.EstimatedMaterialCost" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="Input.EstimatedMaterialCost" class="form-control calc-field" step="0.01" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Input.EstimatedMachineHours" class="form-label"></label>
                            <input asp-for="Input.EstimatedMachineHours" class="form-control calc-field" step="0.01" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.MachineRate" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Input.MachineRate" class="form-control calc-field" step="0.01" />
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Input.OverheadPercent" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Input.OverheadPercent" class="form-control calc-field" step="0.01" />
                                <span class="input-group-text">%</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Input.QuotePrice" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Input.QuotePrice" class="form-control calc-field" step="0.01" />
                            </div>
                        </div>
                    </div>

                    <div class="card bg-light mb-3">
                        <div class="card-body py-2">
                            <div class="row">
                                <div class="col-md-6">
                                    <strong>Estimated Cost:</strong> <span id="calcTotal">$0.00</span>
                                </div>
                                <div class="col-md-6">
                                    <strong>Margin:</strong> <span id="calcMargin">0.0%</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning">Accept & Save</button>
                        <a asp-page="AI" asp-route-jobId="@Model.JobId" class="btn btn-outline-secondary">Start Over</a>
                        <a asp-page="Create" asp-route-jobId="@Model.JobId" class="btn btn-outline-secondary">Quote Manually</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function recalculate() {
            var laborHours = parseFloat(document.querySelector('[name="Input.EstimatedLaborHours"]').value) || 0;
            var laborRate = parseFloat(document.querySelector('[name="Input.LaborRate"]').value) || 0;
            var materialCost = parseFloat(document.querySelector('[name="Input.EstimatedMaterialCost"]').value) || 0;
            var machineHours = parseFloat(document.querySelector('[name="Input.EstimatedMachineHours"]').value) || 0;
            var machineRate = parseFloat(document.querySelector('[name="Input.MachineRate"]').value) || 0;
            var overheadPct = parseFloat(document.querySelector('[name="Input.OverheadPercent"]').value) || 0;
            var quotePrice = parseFloat(document.querySelector('[name="Input.QuotePrice"]').value) || 0;

            var labor = laborHours * laborRate;
            var machine = machineHours * machineRate;
            var subtotal = labor + materialCost + machine;
            var overhead = subtotal * (overheadPct / 100);
            var total = subtotal + overhead;

            document.getElementById('calcTotal').textContent = '$' + total.toFixed(2);

            var margin = quotePrice > 0 ? ((quotePrice - total) / quotePrice * 100) : 0;
            var marginEl = document.getElementById('calcMargin');
            marginEl.textContent = margin.toFixed(1) + '%';
            marginEl.className = margin >= 0 ? 'text-profit' : 'text-loss';
        }

        document.querySelectorAll('.calc-field').forEach(function (el) {
            el.addEventListener('input', recalculate);
        });

        recalculate();
    </script>
}
