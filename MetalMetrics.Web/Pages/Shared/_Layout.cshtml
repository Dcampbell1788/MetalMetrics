<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MetalMetrics</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MetalMetrics.Web.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark shadow-sm">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <span class="text-warning fw-bold">Metal</span><span class="text-white fw-bold">Metrics</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @if (User.IsInRole("Admin") || User.IsInRole("Owner") || User.IsInRole("ProjectManager"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Dashboard/Index">Dashboard</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Jobs/Index">Jobs</a>
                            </li>
                            @if (User.IsInRole("Admin") || User.IsInRole("Owner") || User.IsInRole("ProjectManager") || User.IsInRole("Estimator"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Jobs/Index" asp-route-StatusFilter="Quoted">Quotes</a>
                                </li>
                            }
                            @if (User.IsInRole("Admin") || User.IsInRole("Owner") || User.IsInRole("ProjectManager") || User.IsInRole("Foreman"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Jobs/Index" asp-route-StatusFilter="InProgress">Actuals</a>
                                </li>
                            }
                            @if (User.IsInRole("Admin") || User.IsInRole("Owner") || User.IsInRole("ProjectManager"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Reports/Index">Reports</a>
                                </li>
                            }
                            @if (User.IsInRole("Admin") || User.IsInRole("Owner"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Admin/Users">Admin</a>
                                </li>
                            }
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <partial name="_Notifications" />

    <div class="container flex-grow-1">
        <main role="main" class="pb-3 pt-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-dark text-muted py-3 mt-auto">
        <div class="container text-center">
            <span class="text-warning">Metal</span><span class="text-white">Metrics</span>
            <span class="ms-2">&copy; 2026</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
