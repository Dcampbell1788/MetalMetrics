<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MetalMetrics</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/metalmetrics.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Marketing Nav -->
    <nav class="mm-marketing-nav">
        <div class="container d-flex justify-content-between align-items-center">
            <a class="navbar-brand" asp-page="/Index">
                <span class="brand-metal">Metal</span><span class="brand-metrics">Metrics</span>
            </a>
            <div class="d-flex gap-2 align-items-center">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    @if (User.IsInRole("SuperAdmin"))
                    {
                        <a class="btn btn-sm btn-outline-gold" asp-page="/Platform/Index">Platform</a>
                    }
                    else
                    {
                        <a class="btn btn-sm btn-outline-gold" asp-page="/Dashboard/Index">Dashboard</a>
                    }
                    <form method="post" asp-page="/Logout" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-gold">Logout</button>
                    </form>
                }
                else
                {
                    <a class="btn btn-sm btn-outline-gold" asp-page="/Login">Sign In</a>
                    <a class="btn btn-sm btn-gold" asp-page="/Register">Get Started</a>
                }
            </div>
        </div>
    </nav>

    <partial name="_Notifications" />

    <!-- Page Content -->
    <main class="flex-grow-1">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="mm-footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="fw-bold fs-5 mb-2">
                        <span class="brand-metal">Metal</span><span class="brand-metrics">Metrics</span>
                    </div>
                    <p class="small mb-0">The profitability platform built for sheetmetal fabrication shops.</p>
                </div>
                <div class="col-md-6 mb-3 d-flex justify-content-end">
                    <div>
                        <h6 class="fw-bold text-white mb-2">Support</h6>
                        <p class="small mb-0">Questions? Reach out at<br /><a href="mailto:support@metalmetrics.app">support@metalmetrics.app</a></p>
                    </div>
                </div>
            </div>
            <div class="mm-footer-bottom text-center">
                <span class="brand-metal">Metal</span><span class="brand-metrics">Metrics</span>
                <span class="ms-2">&copy; 2026. All rights reserved.</span>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
