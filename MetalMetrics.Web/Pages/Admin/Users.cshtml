@page
@model MetalMetrics.Web.Pages.Admin.UsersModel
@{
    ViewData["Title"] = "Manage Users";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Manage Users</h2>
    <a asp-page="/Admin/Settings" class="btn btn-outline-light btn-sm">Settings</a>
</div>

@if (Model.GeneratedPassword != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>User invited!</strong> Temporary password for <strong>@Model.InvitedEmail</strong>:
        <code class="ms-2 fs-5">@Model.GeneratedPassword</code>
        <br /><small class="text-muted">Share this password securely with the invited user.</small>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0">Team Members</h5>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>@user.FullName</td>
                                <td>@user.Email</td>
                                <td>
                                    <form method="post" asp-page-handler="ChangeRole" class="d-inline">
                                        <input type="hidden" name="RoleUpdate.UserId" value="@user.Id" />
                                        <select name="RoleUpdate.NewRole" class="form-select form-select-sm d-inline-block w-auto"
                                                onchange="this.form.submit()">
                                            @foreach (var role in Model.RoleOptions)
                                            {
                                                <option value="@role.Value" selected="@(role.Value == user.Role)">@role.Text</option>
                                            }
                                        </select>
                                    </form>
                                </td>
                                <td>
                                    @if (user.IsLockedOut)
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                </td>
                                <td>
                                    <form method="post" asp-page-handler="ToggleLock" asp-route-userId="@user.Id" class="d-inline">
                                        @if (user.IsLockedOut)
                                        {
                                            <button type="submit" class="btn btn-sm btn-outline-success">Activate</button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Deactivate</button>
                                        }
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0">Invite User</h5>
            </div>
            <div class="card-body">
                <form method="post" asp-page-handler="Invite">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Invite.FullName" class="form-label"></label>
                        <input asp-for="Invite.FullName" class="form-control" />
                        <span asp-validation-for="Invite.FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Invite.Email" class="form-label"></label>
                        <input asp-for="Invite.Email" class="form-control" />
                        <span asp-validation-for="Invite.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Invite.Role" class="form-label"></label>
                        <select asp-for="Invite.Role" asp-items="Model.RoleOptions" class="form-select"></select>
                        <span asp-validation-for="Invite.Role" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-warning">Invite User</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
