@page
@model MetalMetrics.Web.Pages.Admin.UsersModel
@{
    ViewData["Title"] = "Manage Users";
    var totalUsers = Model.Users.Count;
    var activeUsers = Model.Users.Count(u => !u.IsLockedOut);
    var inactiveUsers = Model.Users.Count(u => u.IsLockedOut);
}

<div class="d-flex justify-content-end mb-3">
    <div class="d-flex gap-2">
        <button class="btn btn-warning btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#inviteSection" aria-expanded="false" aria-controls="inviteSection">
            <i class="bi bi-person-plus me-1"></i> Invite User
        </button>
        <a asp-page="/Admin/Settings" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-gear me-1"></i> Settings
        </a>
    </div>
</div>

@if (Model.GeneratedPassword != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>User invited!</strong> Temporary password for <strong>@Model.InvitedEmail</strong>:
        <code class="ms-2 fs-5">@Model.GeneratedPassword</code>
        <br /><small class="text-muted">Share this password securely with the invited user.</small>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Summary Stats -->
<div class="row row-cols-1 row-cols-md-3 g-3 mb-4">
    <div class="col">
        <div class="card shadow-sm border-start border-4 border-primary h-100">
            <div class="card-body">
                <div class="text-muted small">Total Users</div>
                <h3 class="mb-0">@totalUsers</h3>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card shadow-sm border-start border-4 border-success h-100">
            <div class="card-body">
                <div class="text-muted small">Active</div>
                <h3 class="mb-0 text-profit">@activeUsers</h3>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card shadow-sm border-start border-4 border-danger h-100">
            <div class="card-body">
                <div class="text-muted small">Inactive</div>
                <h3 class="mb-0 text-loss">@inactiveUsers</h3>
            </div>
        </div>
    </div>
</div>

<!-- Collapsible Invite Form -->
<div class="collapse mb-4" id="inviteSection">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">Invite User</h5>
        </div>
        <div class="card-body">
            <form method="post" asp-page-handler="Invite">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="row g-3">
                    <div class="col-md-4">
                        <label asp-for="Invite.FullName" class="form-label"></label>
                        <input asp-for="Invite.FullName" class="form-control" />
                        <span asp-validation-for="Invite.FullName" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Invite.Email" class="form-label"></label>
                        <input asp-for="Invite.Email" class="form-control" />
                        <span asp-validation-for="Invite.Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Invite.Role" class="form-label"></label>
                        <select asp-for="Invite.Role" asp-items="Model.RoleOptions" class="form-select"></select>
                        <span asp-validation-for="Invite.Role" class="text-danger"></span>
                    </div>
                    <div class="col-md-1 d-flex align-items-end">
                        <button type="submit" class="btn btn-warning w-100">Invite</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Team Members -->
<div class="card shadow-sm mb-4">
    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Team Members</h5>
    </div>
    <div class="card-body">
        <!-- Search -->
        <div class="mb-3">
            <input type="text" id="userSearch" class="form-control" placeholder="Search by name, email, or role..." />
        </div>

        <!-- User List -->
        @foreach (var user in Model.Users)
        {
            var initials = string.Join("", user.FullName.Split(' ', StringSplitOptions.RemoveEmptyEntries).Select(w => w[0])).ToUpper();
            <div class="mm-user-item">
                <div class="d-flex align-items-center gap-3 mm-user-left">
                    <div class="mm-user-avatar">@initials</div>
                    <div class="mm-user-info">
                        <div class="fw-semibold">@user.FullName</div>
                        <div class="text-muted small">@user.Email</div>
                    </div>
                </div>
                <div class="d-flex align-items-center gap-2 mm-user-right">
                    <form method="post" asp-page-handler="ChangeRole" class="d-flex align-items-center gap-1">
                        <input type="hidden" name="RoleUpdate.UserId" value="@user.Id" />
                        <select name="RoleUpdate.NewRole"
                                class="form-select form-select-sm mm-role-select"
                                data-current-role="@user.Role"
                                style="width: auto;">
                            @foreach (var role in Model.RoleOptions)
                            {
                                <option value="@role.Value" selected="@(role.Value == user.Role)">@role.Text</option>
                            }
                        </select>
                        <button type="submit" class="btn btn-sm btn-outline-primary mm-role-save" style="display: none;">Save</button>
                    </form>
                    @if (user.IsLockedOut)
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    <form method="post" asp-page-handler="ToggleLock" asp-route-userId="@user.Id" class="d-inline">
                        @if (user.IsLockedOut)
                        {
                            <button type="submit" class="btn btn-sm btn-outline-success">Activate</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-sm btn-outline-danger"
                                    onclick="return confirm('Deactivate @user.FullName? They will no longer be able to sign in.')">Deactivate</button>
                        }
                    </form>
                </div>
            </div>
        }

        @if (!Model.Users.Any())
        {
            <p class="text-muted text-center py-3 mb-0">No team members yet. Invite someone to get started.</p>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
