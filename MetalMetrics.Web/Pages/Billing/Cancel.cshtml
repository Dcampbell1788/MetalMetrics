@page
@model MetalMetrics.Web.Pages.Billing.CancelModel
@{
    ViewData["Title"] = "Checkout Cancelled";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 text-center">
        <div class="card shadow-sm">
            <div class="card-body p-5">
                <h2>Checkout Cancelled</h2>
                <p class="text-muted mt-3">Your checkout was cancelled. No charges were made.</p>
                <a asp-page="/Billing/Subscribe" class="btn btn-warning btn-lg mt-3">Try Again</a>
                <a asp-page="/Index" class="btn btn-outline-secondary btn-lg mt-3 ms-2">Go Home</a>
            </div>
        </div>
    </div>
</div>
