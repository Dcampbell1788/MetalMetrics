@page
@model MetalMetrics.Web.Pages.ResetPasswordModel
@{
    Layout = "_MarketingLayout";
    ViewData["Title"] = "Reset Password";
}

<section class="mm-auth-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card shadow">
                    <div class="card-body p-4">
                        <h2 class="card-title text-center mb-4">
                            <span class="text-warning">Metal</span><span>Metrics</span>
                        </h2>
                        <p class="text-center text-muted mb-4">Enter your new password.</p>

                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <input type="hidden" asp-for="Input.Email" />
                            <input type="hidden" asp-for="Input.Token" />

                            <div class="mb-3">
                                <label asp-for="Input.Password" class="form-label"></label>
                                <input asp-for="Input.Password" class="form-control" autofocus />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-warning btn-lg">Reset Password</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
