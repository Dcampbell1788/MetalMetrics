@page
@model MetalMetrics.Web.Pages.Platform.EventsModel
@{
    ViewData["Title"] = "Subscription Events";
    ViewData["PlatformSection"] = "Events";
    Layout = "/Pages/Platform/_PlatformLayout.cshtml";
}

@if (Model.Events.Count == 0)
{
    <p class="text-muted">No subscription events recorded yet.</p>
}
else
{
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-sm table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Event Type</th>
                            <th>Stripe Event ID</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var e in Model.Events)
                        {
                            <tr>
                                <td>@e.EventType</td>
                                <td><code>@(e.StripeEventId ?? "â€”")</code></td>
                                <td>@e.OccurredAt.ToString("MMM dd, yyyy h:mm tt")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
