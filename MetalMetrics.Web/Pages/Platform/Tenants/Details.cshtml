@page "{id}"
@model MetalMetrics.Web.Pages.Platform.Tenants.DetailsModel
@{
    ViewData["Title"] = Model.Tenant.CompanyName;
    ViewData["PlatformSection"] = "Tenant Detail";
    Layout = "/Pages/Platform/_PlatformLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>@Model.Tenant.CompanyName</h2>
    <div>
        <form method="post" asp-page-handler="Toggle" class="d-inline">
            <input type="hidden" name="tenantId" value="@Model.Tenant.TenantId" />
            <input type="hidden" name="enable" value="@(!Model.Tenant.IsEnabled)" />
            <button type="submit" class="btn @(Model.Tenant.IsEnabled ? "btn-outline-danger" : "btn-outline-success")">
                @(Model.Tenant.IsEnabled ? "Disable Tenant" : "Enable Tenant")
            </button>
        </form>
        <a asp-page="/Platform/Tenants/Index" class="btn btn-outline-secondary ms-1">Back</a>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm mb-3">
            <div class="card-header bg-dark text-white"><h5 class="mb-0">Subscription Info</h5></div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-5">Status</dt>
                    <dd class="col-sm-7">
                        @{
                            var badgeClass = Model.Tenant.SubscriptionStatus switch
                            {
                                MetalMetrics.Core.Enums.SubscriptionStatus.Active => "bg-success",
                                MetalMetrics.Core.Enums.SubscriptionStatus.Trial => "bg-warning text-dark",
                                MetalMetrics.Core.Enums.SubscriptionStatus.PastDue => "bg-danger",
                                MetalMetrics.Core.Enums.SubscriptionStatus.Cancelled => "bg-secondary",
                                _ => "bg-dark"
                            };
                        }
                        <span class="badge @badgeClass">@Model.Tenant.SubscriptionStatus</span>
                        @if (!Model.Tenant.IsEnabled) { <span class="badge bg-dark ms-1">Disabled</span> }
                    </dd>

                    <dt class="col-sm-5">Plan</dt>
                    <dd class="col-sm-7">@(Model.Tenant.PlanInterval?.ToString() ?? "None")</dd>

                    <dt class="col-sm-5">Trial Ends</dt>
                    <dd class="col-sm-7">@Model.Tenant.TrialEndsAt.ToString("MMM dd, yyyy")</dd>

                    <dt class="col-sm-5">Sub Started</dt>
                    <dd class="col-sm-7">@(Model.Tenant.SubscriptionStartedAt?.ToString("MMM dd, yyyy") ?? "—")</dd>

                    <dt class="col-sm-5">Sub Ends</dt>
                    <dd class="col-sm-7">@(Model.Tenant.SubscriptionEndsAt?.ToString("MMM dd, yyyy") ?? "—")</dd>

                    <dt class="col-sm-5">Created</dt>
                    <dd class="col-sm-7">@Model.Tenant.CreatedAt.ToString("MMM dd, yyyy")</dd>
                </dl>
            </div>
        </div>

        <div class="card shadow-sm mb-3">
            <div class="card-header bg-dark text-white"><h5 class="mb-0">Stripe IDs</h5></div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-5">Customer</dt>
                    <dd class="col-sm-7"><code>@(Model.Tenant.StripeCustomerId ?? "—")</code></dd>
                    <dt class="col-sm-5">Subscription</dt>
                    <dd class="col-sm-7"><code>@(Model.Tenant.StripeSubscriptionId ?? "—")</code></dd>
                    <dt class="col-sm-5">Price</dt>
                    <dd class="col-sm-7"><code>@(Model.Tenant.StripePriceId ?? "—")</code></dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow-sm mb-3">
            <div class="card-header bg-dark text-white"><h5 class="mb-0">Stats</h5></div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-5">Users</dt>
                    <dd class="col-sm-7">@Model.Tenant.UserCount</dd>
                    <dt class="col-sm-5">Jobs</dt>
                    <dd class="col-sm-7">@Model.Tenant.JobCount</dd>
                    <dt class="col-sm-5">Total Revenue</dt>
                    <dd class="col-sm-7">@Model.Tenant.TotalRevenue.ToString("C0")</dd>
                </dl>
            </div>
        </div>

        <div class="card shadow-sm mb-3">
            <div class="card-header bg-dark text-white"><h5 class="mb-0">Users (@Model.Tenant.Users.Count)</h5></div>
            <div class="card-body p-0">
                <table class="table table-sm mb-0">
                    <thead class="table-light">
                        <tr><th>Name</th><th>Email</th><th>Role</th></tr>
                    </thead>
                    <tbody>
                        @foreach (var u in Model.Tenant.Users)
                        {
                            <tr><td>@u.FullName</td><td>@u.Email</td><td><span class="badge bg-secondary">@u.Role</span></td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@if (Model.Tenant.RecentEvents.Count > 0)
{
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white"><h5 class="mb-0">Recent Subscription Events</h5></div>
        <div class="card-body p-0">
            <table class="table table-sm mb-0">
                <thead class="table-light">
                    <tr><th>Event</th><th>Stripe Event ID</th><th>Date</th></tr>
                </thead>
                <tbody>
                    @foreach (var e in Model.Tenant.RecentEvents)
                    {
                        <tr>
                            <td>@e.EventType</td>
                            <td><code>@(e.StripeEventId ?? "—")</code></td>
                            <td>@e.OccurredAt.ToString("MMM dd, yyyy h:mm tt")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
