@page
@model MetalMetrics.Web.Pages.Platform.Tenants.IndexModel
@{
    ViewData["Title"] = "Tenants";
    ViewData["PlatformSection"] = "Tenants";
    Layout = "/Pages/Platform/_PlatformLayout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Company</th>
                        <th>Status</th>
                        <th class="text-center">Users</th>
                        <th class="text-center">Jobs</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model.Tenants)
                    {
                        var badgeClass = t.SubscriptionStatus switch
                        {
                            MetalMetrics.Core.Enums.SubscriptionStatus.Active => "bg-success",
                            MetalMetrics.Core.Enums.SubscriptionStatus.Trial => "bg-warning text-dark",
                            MetalMetrics.Core.Enums.SubscriptionStatus.PastDue => "bg-danger",
                            MetalMetrics.Core.Enums.SubscriptionStatus.Cancelled => "bg-secondary",
                            _ => "bg-dark"
                        };
                        <tr class="@(!t.IsEnabled ? "table-secondary" : "")">
                            <td>
                                <a asp-page="/Platform/Tenants/Details" asp-route-id="@t.TenantId">@t.CompanyName</a>
                                @if (!t.IsEnabled) { <span class="badge bg-dark ms-1">Disabled</span> }
                            </td>
                            <td><span class="badge @badgeClass">@t.SubscriptionStatus</span></td>
                            <td class="text-center">@t.UserCount</td>
                            <td class="text-center">@t.JobCount</td>
                            <td>@t.CreatedAt.ToString("MMM dd, yyyy")</td>
                            <td>
                                <a asp-page="/Platform/Tenants/Details" asp-route-id="@t.TenantId" class="btn btn-sm btn-outline-secondary">View</a>
                                <form method="post" asp-page-handler="Toggle" class="d-inline">
                                    <input type="hidden" name="tenantId" value="@t.TenantId" />
                                    <input type="hidden" name="enable" value="@(!t.IsEnabled)" />
                                    <button type="submit" class="btn btn-sm @(t.IsEnabled ? "btn-outline-danger" : "btn-outline-success")">
                                        @(t.IsEnabled ? "Disable" : "Enable")
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
