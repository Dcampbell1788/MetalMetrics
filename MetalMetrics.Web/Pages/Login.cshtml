@page
@model LoginModel
@{
    Layout = "_MarketingLayout";
    ViewData["Title"] = "Sign In";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <h2 class="card-title text-center mb-4">
                    <span class="text-warning">Metal</span><span>Metrics</span>
                </h2>
                <p class="text-center text-muted mb-4">Sign in to your account</p>

                <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email" class="form-control" autofocus />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 d-flex justify-content-between align-items-center">
                        <div class="form-check">
                            <input asp-for="Input.RememberMe" class="form-check-input" />
                            <label asp-for="Input.RememberMe" class="form-check-label"></label>
                        </div>
                        <a asp-page="/ForgotPassword" class="small">Forgot your password?</a>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-warning btn-lg">Sign In</button>
                    </div>

                    <p class="text-center mt-3">
                        Don't have an account? <a asp-page="/Register">Register</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
